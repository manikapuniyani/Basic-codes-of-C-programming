#include<stdio.h>
void main()
{
	int ch,a,b;
	printf("enter the two numbers");
	scanf("%d%d",&a,&b);
	while(1)
	{
		printf("enter your choice.\n");
		printf("1.Addition\n2.Subtraction\n3.Multiply\n4.Divide\n5.Remainder\n6.Exit\n");
		scanf("%d",&ch);
		switch(ch)
		{
			case 1:printf("%d is the answer",a+b);
				   printf("\n");
				   break;
			case 2:printf("%d is the answer",a-b);
				   printf("\n");
			       break;
			case 3:printf("%d is the answer",a*b);
				   printf("\n");
			       break;
			case 4:printf("%d is the answer",a/b);
			       printf("\n");
				   break;
			case 5:printf("%d is the answer",a%b);
				   printf("\n");
				   break;
			case 6:exit(0);
		}
	}	
}
